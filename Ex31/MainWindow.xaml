<Window x:Class="Ex31.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex31"
        mc:Ignorable="d"
        Title="MainWindow"  Width="350" SizeToContent="Height">
    <Grid TextElement.FontSize="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="resultProgressBar"  Grid.ColumnSpan="2" Height="20" Margin="10"/>
        <Label x:Name="resultLabel"  Content="0 %" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>
        <Button Content="Start" Grid.Row="2" Margin="5" Click="StartButton_Click"/>
        <Button Content="Cancel" Grid.Column="1" Grid.Row="2" Margin="5" Click="CancelButton_Click" />
    </Grid>
</Window>
